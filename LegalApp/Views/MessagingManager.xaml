<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LegalApp.MessagingManager">
	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand" Orientation="Vertical" >
			<Entry x:Name="MailTo" Placeholder="Type EmailId of recepient" HorizontalOptions="FillAndExpand"></Entry>
			<Entry x:Name="MailCC" Placeholder="Type EmailId of CC" HorizontalOptions="FillAndExpand"></Entry>
			<Entry x:Name="MailSubject" Placeholder="Subject" HorizontalOptions="FillAndExpand"></Entry>
			<Entry x:Name="BodyEmail" Placeholder="Email Contents" HorizontalOptions="FillAndExpand"></Entry>

			<Button x:Name="SendEmail" Text="Send Email" HorizontalOptions="FillAndExpand"></Button>

			<Entry x:Name="CallTo" Placeholder="Number to call" HorizontalOptions="FillAndExpand"></Entry>
			<Button x:Name="MakeCall" Text="Call" HorizontalOptions="FillAndExpand"></Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
